  <div class="form-group row">
    <label class="col-md-2 offset-md-2">画像登録</label>
    <div class="col-md-5">
      <%= f.file_field :notice_image, accept: "notice_image/*"%>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-md-2 offset-md-2">情報タイトル</label>
    <div class="col-md-5">
     <%= f.text_field :title, style: "width:60%;", placeholder: "タイトル" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-md-2 offset-md-2">企画説明</label>
    <div class="col-md-5">
      <%= f.text_area :body, rows: "6",style: "width:60%;", placeholder: "ここに説明文を記述します" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-md-2 offset-md-2">ジャンル</label>
    <div class="col-md-4">
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-2 offset-md-2">開始日時</label>
      <div class="col-md-4">
      <%= f.label :start_datetime, '日時(必須)', class: 'control-label' %></br>
      <%= f.datetime_field :start_datetime, class: 'form-control' %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-md-2 offset-md-2">終了日時</label>
    <div class="col-md-4">
      <%= f.label :end_datetime, '日時(必須)', class: 'control-label' %></br>
      <%= f.datetime_field :end_datetime, class: 'form-control' %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-md-2 offset-md-2">開催場所</label>
    <div class="col-md-4">
     <%= f.text_field :place, style: "width:60%;", placeholder: "開催場所記入" %>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-2 offset-md-5">
      <div class="actions">
        <% if local_assigns[:edit_flag].present? %>
        <%= f.submit "変更を保存" ,class: 'btn btn-success' %>
        <% else %>
        <%= f.submit "新規登録" ,class: 'btn btn-success' %>
        <% end %>

      </div>
     </div>
  </div>