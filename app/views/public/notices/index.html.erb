<div class="container-fluid">
  <div class="row">
    <div>
      <div><h3>投稿一覧</h3><span>(全<%= @notices.count %>件)</span></div>
      <div>
      <% @notices.each do |notice| %>
        <div>
        <%= link_to notice_path(notice.id), class:"a" do %>
          <div ><%= image_tag notice.get_notice_image(150,100), class:'rounded shadow' %></div>
            <div class="row"><span class="text-secondary mt-3"><strong><%= notice.title %></strong></span></div>
              <div class="row"><span class="text-secondary mt-1"><strong>¥<%= notice.place %></strong></span></div>
        <% end %>
        </div>
      <% end %>
      </div>


    </div>
  </div>
</div>
