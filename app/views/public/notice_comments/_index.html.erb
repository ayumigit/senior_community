<% notice.notice_comments.each do |notice_comment| %>
  <div class="row mb-4">
    <div class="col-sm-3">
      <%= link_to senior_path(notice_comment.senior) do %>
        <%= image_tag notice_comment.senior.get_profile_image(100,100) %><br>
        <%= notice_comment.senior.nickname %>
      <% end %>
      <%= render "public/notices/static_rate", notice: notice_comment, prefix: "comment" %>
    </div>
    <div class="col-sm-6">
      <%= notice_comment.comment %>
    </div>
    <div class="col-sm-3">
      <% if notice_comment.senior == current_senior %>
        <%= link_to "削除する", notice_notice_comment_path(notice, notice_comment), method: :delete, class: "btn btn-danger pull-right" %>
      <% end %>  
    </div>
  </div>
<% end %>