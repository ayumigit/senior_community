<% if notice.favorited_by?(current_senior) %>

  <%= link_to notice_favorites_path(notice), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= notice.favorites.count %> いいね
  <% end %>
<% else %>

  <%= link_to notice_favorites_path(Notice.first), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= notice.favorites.count %> いいね
  <% end %>
<% end %>