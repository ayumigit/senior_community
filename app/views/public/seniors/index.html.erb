<div class="container-fluid mx-5">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <div><h1><シニア会員一覧></h1></div>
      <table class="table">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>ニックネーム</th>
            <th>フォロー/フォローをやめる</th>
          </tr>
        </thead>
        <tbody>
          <% @seniors.each do |senior| %>
          <tr>
          <td><%= link_to senior_path(senior.id), class:"a" do %>
          <%= image_tag senior.get_profile_image(150,100), class:"rounded shadow col-8" %>
          <% end %>
          </td>
          <td class="display-4"><%= senior.nickname %></td>
          <td class="text-center"><%= render "public/relationships/btn", senior: senior %></td>
          <% end %>
          <%= paginate @seniors %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
