<div class="container my-5">
  <div class="row">
     <div class="col-top-4">
       <%= link_to "新規投稿ジャンル登録", new_admin_genre_path, class: "btn btn-primary btn-md ml-5" %>
      </div>

      <div class="col-md-4">
        <table class="table table-hover table-inverse">
          <thead>
            <th>投稿ジャンル</th>
            <th></th>
          </thead>
          <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td class="col-6"><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-md ml-5" %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>