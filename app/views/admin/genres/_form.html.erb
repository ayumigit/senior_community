<div class="form-group row">
    <label class="col-md-2 offset-md-2">投稿ジャンル登録</label>
    <div class="col-md-5">
     <%= f.text_field :name, style: "width:100%;", placeholder: "ジャンル名" %>
    </div>


  <div class="row mb-5">
    <div class="col-2 offset-md-5">
      <div class="actions">
        <% if local_assigns[:edit_flag].present? %>
        <%= f.submit "変更を保存" ,class: 'btn btn-success' %>
        <% else %>
        <%= f.submit "新規登録" ,class: 'btn btn-success' %>
        <% end %>

      </div>
     </div>
  </div>
</div>